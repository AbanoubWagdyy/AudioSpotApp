<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12.7sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">49.7sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">@color/grey</item>
        <item name="android:progressTint">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="TextStyle2">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12.3sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">98.2sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle3">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">12.5sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">49.2sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="TextStyle4">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">11sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">177.3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>
    <style name="TextStyle5">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0.07</item>
        <item name="android:lineSpacingExtra">8.3sp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="OverflowStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_action_navigation_more_vert</item>
    </style>

</resources>
