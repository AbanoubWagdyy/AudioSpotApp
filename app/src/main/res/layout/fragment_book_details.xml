<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/black"
             tools:context=".UI.bookDetails.BookDetailsFragment">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp">

        <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2">

                <RelativeLayout
                        android:id="@+id/relativeShare"
                        android:layout_width="55dp"
                        android:layout_gravity="start"
                        android:layout_height="38dp"
                        android:layout_centerVertical="true"
                        android:layout_centerInParent="true"
                        android:background="@color/white">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@mipmap/share"/>

                </RelativeLayout>

            </RelativeLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:id="@+id/relativeAddToCart"
                        android:background="@mipmap/reset_pass_back"
                        android:layout_gravity="center_vertical">

                    <ImageView
                            android:background="@mipmap/cart_book_details"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="20dp"
                            android:id="@+id/imageView4"/>

                    <TextView
                            android:id="@+id/tvAddToCart"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="17sp"
                            android:gravity="center"
                            android:layout_toEndOf="@id/imageView4"
                            android:textColor="@color/white"
                            android:letterSpacing="0.07"
                            android:lineSpacingExtra="14.7sp"
                            android:text="Add To Cart"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linear"
                android:fillViewport="true">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1.3">

                            <RelativeLayout android:layout_width="fill_parent"
                                            android:layout_height="150dp"
                                            android:layout_margin="10dp"
                                            android:layout_weight="2">

                                <ImageView android:id="@+id/ivBook"
                                           android:layout_width="match_parent"
                                           android:src="@drawable/sample"
                                           android:scaleType="fitXY"
                                           android:layout_height="match_parent"/>
                                <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:background="@mipmap/play"
                                        android:layout_alignParentBottom="true"
                                        android:layout_margin="5dp"
                                        android:id="@+id/ivPlay"/>

                            </RelativeLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:orientation="vertical"
                                android:layout_weight="1">

                            <com.willy.ratingbar.ScaleRatingBar
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/ratingBar"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:srb_numStars="5"
                                    app:srb_minimumStars="1"
                                    android:gravity="center_horizontal"
                                    app:srb_starWidth="15dp"
                                    android:layout_marginTop="15dp"
                                    app:srb_starHeight="15dp"
                                    app:srb_starPadding="5dp"
                                    app:srb_stepSize="0.5"
                                    app:srb_isIndicator="false"
                                    app:srb_clickable="false"
                                    app:srb_scrollable="false"
                                    app:srb_clearRatingEnabled="true"
                                    app:srb_drawableEmpty="@drawable/star"
                                    app:srb_drawableFilled="@drawable/star_filled">

                            </com.willy.ratingbar.ScaleRatingBar>

                            <TextView
                                    android:id="@+id/tvNumberOfReviews"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="7.8sp"
                                    android:textColor="@color/white"
                                    android:letterSpacing="0.07"
                                    android:lineSpacingExtra="12sp"
                                    android:gravity="center_horizontal"
                                    android:text=""/>

                            <TextView
                                    android:id="@+id/tvBookTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:letterSpacing="0.07"
                                    android:layout_marginTop="15dp"
                                    android:lineSpacingExtra="12sp"
                                    android:gravity="center_horizontal"
                                    android:text=""/>

                            <TextView
                                    android:id="@+id/tvAuthor"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:letterSpacing="0.07"
                                    android:textStyle="bold"
                                    android:layout_marginTop="12dp"
                                    android:lineSpacingExtra="12sp"
                                    android:gravity="center_horizontal"
                                    android:text=""/>

                            <TextView
                                    android:id="@+id/tvNarrator"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/white"
                                    android:letterSpacing="0.07"
                                    android:textStyle="normal"
                                    android:layout_marginTop="12dp"
                                    android:lineSpacingExtra="12sp"
                                    android:gravity="center_horizontal"
                                    android:text=""/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                        <RelativeLayout
                                android:id="@+id/relativeAddToFavourites"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="10dp"
                                android:background="@mipmap/red_background">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/white"
                                    android:letterSpacing="0.07"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:lineSpacingExtra="8.5sp"
                                    android:gravity="center_horizontal"
                                    android:text="Add to Favorite"/>

                            <ImageView android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:background="@mipmap/heart"
                                       android:layout_centerVertical="true"
                                       android:layout_marginStart="10dp"/>

                        </RelativeLayout>

                        <RelativeLayout
                                android:id="@+id/relativeGiveAGift"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:background="@mipmap/green_background">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="10sp"
                                    android:textColor="@color/white"
                                    android:letterSpacing="0.07"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"
                                    android:lineSpacingExtra="8.5sp"
                                    android:gravity="center_horizontal"
                                    android:text="Give as a Gift"/>

                            <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/gift"
                                    android:layout_centerVertical="true"
                                    android:layout_marginStart="10dp"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="30dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:gravity="center_horizontal"
                                android:text="Category: "/>

                        <TextView
                                android:id="@+id/tvCategory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:text="Category: "/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="30dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:gravity="center_horizontal"
                                android:text="Length: "/>

                        <TextView
                                android:id="@+id/tvLength"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:text="Category: "/>

                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="30dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:gravity="center_horizontal"
                                android:text="Publisher: "/>

                        <TextView
                                android:id="@+id/tvPublisher"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:text="Category: "/>

                    </LinearLayout>

                    <TextView
                            android:id="@+id/tvViewBookChapters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:letterSpacing="0.07"
                            android:textStyle="bold"
                            android:layout_marginTop="20dp"
                            android:lineSpacingExtra="12sp"
                            android:text="@string/view_book_chapters"/>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_marginTop="15dp"
                            android:layout_height="30dp">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:gravity="center_horizontal"
                                android:text="Price: "/>

                        <TextView
                                android:id="@+id/tvPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:textColor="@color/white"
                                android:letterSpacing="0.07"
                                android:textStyle="bold"
                                android:layout_marginTop="12dp"
                                android:lineSpacingExtra="12sp"
                                android:text=""/>

                    </LinearLayout>

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textColor="@color/colorPrimary"
                            android:letterSpacing="0.07"
                            android:textStyle="bold"
                            android:layout_marginTop="12dp"
                            android:lineSpacingExtra="12sp"
                            android:text="About The Book"/>

                    <TextView
                            android:id="@+id/tvAbout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/white"
                            android:letterSpacing="0.07"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:lineSpacingExtra="12sp"
                            android:text=""/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:background="@color/white"/>

                    <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerReviews"
                            android:layout_width="match_parent"
                            android:layout_marginTop="10dp"
                            android:layout_height="wrap_content">

                    </androidx.recyclerview.widget.RecyclerView>

                    <TextView
                            android:id="@+id/tvSeeAllReviews"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12.5sp"
                            android:textColor="@color/white"
                            android:letterSpacing="0.07"
                            android:lineSpacingExtra="22.2sp"
                            android:text="@string/see_all_reviews"/>

                </LinearLayout>
            </RelativeLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</FrameLayout>