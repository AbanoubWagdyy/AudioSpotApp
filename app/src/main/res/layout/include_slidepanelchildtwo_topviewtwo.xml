<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:background="@color/black"
              android:gravity="bottom"
              android:orientation="vertical">
    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/bookCover"
                   android:layout_width="60dp"
                   android:layout_height="90dp"
                   android:src="@mipmap/login_icon"/>

        <TextView
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="12.5sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:paddingStart="20dp"
                android:gravity="start"
                android:paddingEnd="20dp"
                android:textColor="@color/white"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="77.8sp"
                android:text=""/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView
                    android:id="@+id/tvClose"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:textSize="25.8sp"
                    android:letterSpacing="0.07"
                    android:textColor="@color/colorPrimary"
                    android:lineSpacingExtra="121.5sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_horizontal"
                    android:text="X"/>

            <ImageView
                    android:id="@+id/btn_play_bottom"
                    android:layout_width="wrap_content"
                    android:layout_toStartOf="@+id/tvClose"
                    android:layout_marginEnd="10dp"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pause_bottom"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>