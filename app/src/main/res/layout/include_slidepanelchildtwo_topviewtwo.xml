<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" xmlns:playpauseview="http://schemas.android.com/apk/res-auto"
              android:background="@color/black"
              android:elevation="4dp"
              android:gravity="center"
              android:orientation="vertical">

    <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:padding="15dp"
                  android:orientation="horizontal">

        <ImageView android:id="@+id/bookCover"
                   android:layout_width="75dp"
                   android:layout_height="105dp"
                   android:src="@mipmap/book_sample"/>

        <TextView
                android:id="@+id/bookName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="16.5sp"
                android:paddingStart="20dp"
                android:textColor="@color/white"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="77.8sp"
                android:text="Book name "/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25.8sp"
                    android:letterSpacing="0.07"
                    android:textColor="@color/colorPrimary"
                    android:lineSpacingExtra="121.5sp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:gravity="center_horizontal"
                    android:text="X"/>

            <dm.audiostreamerdemo.widgets.PlayPauseView
                    android:id="@+id/btn_play"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:stateListAnimator="@drawable/button_elevation"
                    playpauseview:isCircleDraw="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>