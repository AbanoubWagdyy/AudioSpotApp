<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_height="match_parent"
        tools:context=".UI.addBookmark.AddBookmarkActivity">

    <include layout="@layout/header"/>

    <include layout="@layout/back"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <ImageView android:id="@+id/ivBook"
                   android:layout_width="100dp"
                   android:scaleType="fitXY"
                   android:layout_marginStart="20dp"
                   android:src="@mipmap/login_icon"
                   android:layout_height="130dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:paddingStart="10dp"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/bookName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:gravity="start"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.07"
                    android:textStyle="bold"
                    android:paddingEnd="20dp"
                    android:lineSpacingExtra="8.7sp"
                    android:text="Book name"/>

            <TextView
                    android:id="@+id/chapterName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:gravity="start"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:letterSpacing="0.07"
                    android:textStyle="bold"
                    android:paddingEnd="20dp"
                    android:lineSpacingExtra="8.7sp"
                    android:text="Book name"/>

            <TextView
                    android:id="@+id/bookmarkTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="19sp"
                    android:textColor="@color/white"
                    android:letterSpacing="0.07"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:paddingEnd="20dp"
                    android:gravity="start"
                    android:lineSpacingExtra="8.7sp"
                    android:text="Book name"/>

        </LinearLayout>

    </LinearLayout>

    <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:textSize="13.7sp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rectangle_background"
            android:textColor="@color/white"
            android:letterSpacing="0.07"
            android:singleLine="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:imeOptions="actionDone"
            android:lineSpacingExtra="16sp"
            android:textColorHint="@color/white"
            android:gravity="start"
            android:layout_gravity="center_vertical"
            android:padding="15dp"
            android:hint="Comment"/>

    <Button
            android:text="Add Bookmark"
            android:layout_width="200dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:id="@+id/addBookmark"
            android:background="@mipmap/reset_pass_back"
            android:textSize="14.5sp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="15dp"
            android:textColor="@color/white"
            android:letterSpacing="0.07"
            android:lineSpacingExtra="50.3sp"
            android:textStyle="normal"
            android:gravity="center"/>


</LinearLayout>