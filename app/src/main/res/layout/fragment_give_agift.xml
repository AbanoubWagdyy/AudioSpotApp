<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:background="@color/black"
             android:layout_height="match_parent"
             tools:context=".UI.giveAgift.GiveGiftFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.3">

                <RelativeLayout android:layout_width="fill_parent"
                                android:layout_height="150dp"
                                android:layout_margin="10dp"
                                android:layout_weight="2">

                    <ImageView android:id="@+id/ivBook"
                               android:layout_width="match_parent"
                               android:background="@drawable/sample"
                               android:layout_height="match_parent"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/play"
                            android:layout_alignParentBottom="true"
                            android:layout_margin="5dp"
                            android:id="@+id/ivPlay"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                <com.willy.ratingbar.ScaleRatingBar
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/ratingBar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:srb_numStars="5"
                        app:srb_minimumStars="1"
                        android:gravity="center_horizontal"
                        app:srb_starWidth="15dp"
                        android:layout_marginTop="15dp"
                        app:srb_starHeight="15dp"
                        app:srb_starPadding="5dp"
                        app:srb_stepSize="0.5"
                        app:srb_isIndicator="false"
                        app:srb_clickable="false"
                        app:srb_scrollable="false"
                        app:srb_clearRatingEnabled="true"
                        app:srb_drawableEmpty="@drawable/star"
                        app:srb_drawableFilled="@drawable/star_filled">

                </com.willy.ratingbar.ScaleRatingBar>

                <TextView
                        android:id="@+id/tvNumberOfReviews"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="7.8sp"
                        android:textColor="@color/white"
                        android:letterSpacing="0.07"
                        android:lineSpacingExtra="12sp"
                        android:gravity="center_horizontal"
                        android:text=""/>

                <TextView
                        android:id="@+id/tvBookTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:letterSpacing="0.07"
                        android:layout_marginTop="15dp"
                        android:lineSpacingExtra="12sp"
                        android:gravity="center_horizontal"
                        android:text=""/>

                <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:letterSpacing="0.07"
                        android:textStyle="bold"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="12sp"
                        android:gravity="center_horizontal"
                        android:text=""/>

                <TextView
                        android:id="@+id/tvNarrator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/white"
                        android:letterSpacing="0.07"
                        android:textStyle="normal"
                        android:layout_marginTop="12dp"
                        android:lineSpacingExtra="12sp"
                        android:gravity="center_horizontal"
                        android:text=""/>
            </LinearLayout>
        </LinearLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13.5sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:letterSpacing="0.07"
                android:lineSpacingExtra="10sp"
                android:layout_margin="10dp"
                android:text="Please enter the AudioSpot account email"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Email"
                android:inputType="textEmailAddress"
                android:paddingStart="10dp"
                android:layout_marginTop="20dp"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:ems="10"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:id="@+id/email"
                android:background="@drawable/edit_text_background"/>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="match_parent">

            <RelativeLayout
                    android:id="@+id/relativeGiveAGift"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="40dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginBottom="25dp"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/green_background">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:layout_centerInParent="true"
                        android:textColor="@color/white"
                        android:letterSpacing="0.07"
                        android:layout_marginTop="10dp"
                        android:lineSpacingExtra="8.5sp"
                        android:gravity="center_horizontal"
                        android:text="Give as a Gift"/>

                <ImageView
                        android:src="@mipmap/gift"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:id="@+id/imageView11"/>


            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>