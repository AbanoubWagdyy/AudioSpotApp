<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/black"
        android:fillViewport="true"
        android:layout_height="match_parent"
        tools:context=".UI.register.RegisterActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/login_icon"
                android:layout_gravity="center_horizontal"
                android:id="@+id/imageView5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="96dp"/>

        <LinearLayout
                android:id="@+id/linear"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1.3"
                    android:gravity="center_horizontal"
                    android:layout_marginEnd="15dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"/>

            <TextView
                    android:text="@string/or_sign"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="1"
                    android:id="@+id/textView3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:textSize="14.5sp"
                    android:textColor="@color/white"
                    android:letterSpacing="0.07"
                    android:lineSpacingExtra="79.8sp"
                    android:gravity="center_horizontal"
                    tools:text="Create New Account"/>

            <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:layout_weight="1.3"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_horizontal"
                    android:background="@color/white"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/linear"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintVertical_bias="0.062">

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="50dp"
                          android:layout_marginTop="20dp"
                          android:orientation="horizontal">

                <EditText
                        android:id="@+id/etFirstName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:ems="10"
                        android:textColor="@color/white"
                        android:hint="@string/first_name"
                        android:layout_marginStart="10dp"
                        android:textColorHint="@color/white"
                        android:background="@drawable/light_black_btn_background_3"
                        android:layout_marginEnd="8dp"
                        android:paddingStart="10dp"/>

                <EditText
                        android:id="@+id/etLastName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/white"
                        android:layout_marginEnd="10dp"
                        android:ems="10"
                        android:hint="@string/last_name"
                        android:textColorHint="@color/white"
                        android:background="@drawable/light_black_btn_background_3"
                        android:paddingStart="10dp"/>

            </LinearLayout>

            <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:inputType="textEmailAddress"
                    android:layout_marginTop="15dp"
                    android:hint="@string/prompt_email"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/white"
                    android:background="@drawable/light_black_btn_background_3"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="10dp"/>

            <EditText
                    android:id="@+id/etMobilePhone"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:inputType="number"
                    android:layout_marginTop="15dp"
                    android:hint="@string/mobile_phone"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/white"
                    android:background="@drawable/light_black_btn_background_3"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="10dp"/>

            <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/white"
                    android:hint="@string/password"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/white"
                    android:background="@drawable/light_black_btn_background_3"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="10dp"/>

            <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:hint="@string/confirm_password"
                    android:layout_marginStart="10dp"
                    android:textColorHint="@color/white"
                    android:background="@drawable/light_black_btn_background_3"
                    android:layout_marginEnd="8dp"
                    android:paddingStart="10dp"/>

            <Button
                    android:text="@string/create"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/btnRegister"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/button_background"
                    android:textSize="14.5sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:letterSpacing="0.07"
                    android:lineSpacingExtra="50.3sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>